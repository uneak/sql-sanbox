{% extends 'base.html.twig' %}

{% block main %}
	<div class="container">
		<form action="/login" method="post">
			<select name="user" class="form-select form-select-lg mb-3" aria-label="Large select example">
				<option selected>Se connecter</option>
				{% for user in users %}
					<option value="{{ user.getId() }}">{{ user.getFirstName() }} {{ user.getLastName() }}</option>
				{% endfor %}
			</select>

			<button type="submit" class="btn btn-primary">Se connecter</button>

		</form>
	</div>
{% endblock %}